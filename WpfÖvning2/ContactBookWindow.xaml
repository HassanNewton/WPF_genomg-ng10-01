<Window x:Class="WpfÖvning2.ContactBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfÖvning2"
        mc:Ignorable="d"
        Title="Contact Book" Height="350" Width="400">
    <Grid>
        <TextBox x:Name="NameInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10"/>
        <TextBox x:Name="PhoneInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="170,10,0,0" />
        <Button Content="Add Contact" HorizontalAlignment="Right" VerticalAlignment="Top" Width="100" Margin="10" Click="AddContact_Click"/>

        <ListBox x:Name="ContactList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="360" Height="180" Margin="10,50,0,0" SelectionChanged="ContactList_SelectionChanged"/>

        <Button Content="Save Changes" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Width="120" Click="SaveChanges_Click"/>
        <Button Content="Remove Contact" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="120" Click="RemoveContact_Click"/>
    </Grid>

</Window>